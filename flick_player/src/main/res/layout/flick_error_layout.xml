<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/flick_streaming_fragment_layout">

    <RelativeLayout
        android:id="@+id/error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxWidth="300dp"
            android:text="No Connection"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/error_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:maxWidth="328dp"
            android:padding="12dp"
            android:text="Please check your internet connection and try again"
            android:textColor="#b3ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/error_retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_body"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:maxWidth="200dp"
            android:text="Retry"
            android:textAllCaps="false"
            android:textColor="#3d82f1"
            android:textSize="14sp" />
    </RelativeLayout>
</merge>